pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building Webpage..."
                // For Windows:
                bat 'dir'
                // For Linux users use:
                // sh 'ls -la'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploy Step (currently dummy)"
                echo "Website files: index.html + styles.css"
            }
        }
    }

    post {
        success {
            echo "Pipeline finished successfully!"
        }
    }
}

